{
  "rules": {
    "camelcase": "off",
    "i18n-text/no-en": "off",
    "import/no-namespace": "off",
    "no-shadow": "off"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "ignorePatterns": ["lib/"],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "extends": ["plugin:@typescript-eslint/recommended"]
    }
  ]
}
